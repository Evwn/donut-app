<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleColorLight">
    <item>
        <shape android:shape="rectangle">
            <!-- Solid background color -->
            <solid android:color="@color/white" />
            
            <!-- Rounded corners for dialog -->
            <corners android:radius="@dimen/dialog_corner_radius" />
            
            <!-- Border (optional) -->
            <stroke
                android:width="1dp"
                android:color="@color/divider" />
                
            <!-- Padding to ensure content doesn't touch the edges -->
            <padding
                android:left="@dimen/dialog_padding"
                android:top="@dimen/dialog_padding"
                android:right="@dimen/dialog_padding"
                android:bottom="@dimen/dialog_padding" />
        </shape>
    </item>
</ripple>
